    

<div class="container">
    <div class="menu">
        <h2 class="menu-header"> Menu Page </h2>

        <div class="row">
            <% Dish.all.each do |dish| %>
                <div class="col s4">
                    <div class="card small sticky-action">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator"  <%= image_tag "pizza.jpg"%> >
                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4"><%= dish.short_name %><i class="material-icons right">more_vert</i></span>
                            <p><a> Price: <%= dish.price %> USD</a><a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons right">add</i></a></p>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">Description:<i class="material-icons right">close</i></span>
                            <p><%= dish.description %></p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>