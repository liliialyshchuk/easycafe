<%= render "devise/shared/error_messages", resource: resource %>
<div class=container>
  <div class="registration-form">
    <div class="container">
      <div class="row center sign-up-form">
        <div class="col s12 l12">
          <div class="card-panel">
            <h3 class="header">Sign up</h3>
              <div class="row">

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col s12"}) do |f| %>

                  <div class="row">
                    <div class="input-field col s12">
                      <%= f.email_field :email, placeholder: "Enter your Email", autofocus: true, autocomplete: "email" %>
                      <%= f.label :email %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <%= f.password_field :password, placeholder: "Enter your Password (6 characters minimum)", autocomplete: "new-password" %>
                      <%= f.label :password %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <%= f.password_field :password_confirmation, placeholder: "Repeat your Password", autocomplete: "new-password" %>
                      <%= f.label :password_confirmation %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <div class="actions">
                        <%= f.button "Sign up", class: "waves-effect waves-light btn-small" %>
                      </div>
                    </div>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
          
              </div>
          </div>
        </div>
      </div>
    </div>  

  </div>
</div>
