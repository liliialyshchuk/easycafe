<%= render "devise/shared/error_messages", resource: resource %>
<div class=container>
  <div class="registration-form">
    <div class="container">
      <div class="row center sign-up-form">
        <div class="col s12 l12">
          <div class="card-panel">
            <h3 class="header"><%= t('devise.edit') %> <%= resource_name.to_s.humanize %></h3
              <div class="row">


                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

                  <div class="field form-group left-align">
                    <%= f.label :email, "Email:", style: "display: block" %>
                    <%= f.email_field :email, class: "form-control", placeholder: t('devise.placeholder.enter_your_email'), autofocus: true, autocomplete: "email"  %>
                  </div>

                  <br>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>

                  <div class="field form-group left-align">
                    <%= f.label :password, "Password", style: "display: block"  %> 
                    <%= f.password_field :password, class: "form-control", placeholder: t('devise.placeholder.leave_blank_password'), autofocus: true, autocomplete: "new-password" %>
                    <% if @minimum_password_length %>
                      <br/>
                      <em><%= @minimum_password_length %> <%= t('devise.placeholder.minimum_charachers') %></em>
                    <% end %>
                  </div>

                  <br>

                  <div class="field form-group left-align">
                    <%= f.label :password_confirmation, "Password confirmation:", style: "display: block" %>
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: t('devise.placeholder.confirm_password'), autofocus: true, autocomplete: "new-password"  %>
                  </div>

                  <br>

                  <div class="field form-group left-align">
                    <%= f.label :current_password, "Current password:", style: "display: block" %>
                    <%= f.password_field :current_password, class: "form-control", placeholder: t('devise.placeholder.enter_your_password'), autofocus: true, autocomplete: "current-password"  %>
                  </div>

                  <br>

                  <div class="row">
                    <div class="input-field col s12">
                      <div class="actions">
                        <%= f.button t('devise.button.update_profile'), class: "waves-effect waves-light btn-small" %>
                      </div>
                    </div>
                  </div>
                  
                <% end %>

              <div class="center">
                  <%= link_to t('devise.button.back'), root_path, class: 'waves-effect waves-light btn-small' %>
              </div>

              </div>
          </div>
        </div>
      </div>
    </div> 

  </div>
</div>


