
<div class=container>
  <div class="registration-form">
<%= render "devise/shared/error_messages", resource: resource %>

    <div class="container">
      <div class="row center sign-up-form">
        <div class="col s12 l12">
          <div class="card-panel">
            <h3 class="header"><%= t('devise.login') %></h3>
              <div class="row">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "col s12"}) do |f| %>
                 
                  <div class="field form-group left-align">
                    <%= f.label :email, "Email:", style: "display: block" %>
                    <%= f.email_field :email, class: "form-control", placeholder: t('devise.placeholder.enter_your_email'), autofocus: true, autocomplete: "email"  %>
                  </div>

                  <br>

                  <div class="field form-group left-align">
                    <%= f.label :password, "Password:", style: "display: block" %>
                    <%= f.password_field :password, class: "form-control", placeholder: t('devise.placeholder.enter_your_password_6'), autofocus: true, autocomplete: "password"  %>
                  </div>

                  <br>

                  <div class="row">
                    <div class="input-field col s12">
                      <div class="actions">
                        <%= f.button t('devise.button.log_in'), class: "waves-effect waves-light btn-small" %>
                      </div>
                    </div>
                  </div>

                <% end %>
                
                <%= render "devise/shared/links" %>

              </div>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
