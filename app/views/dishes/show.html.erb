<div class="container">
    <div class="menu">
        <h2 class="menu-header"> <%= @dish.short_name %> </h2>

        <div class="row">
            <div class="col s8 offset-s2">
                <div class="card z-depth-4">
                    <div class="card-image">
                        <%= image_tag @dish.dish_image %> 
                        <span class="card-title"><%= @dish.short_name %></span>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <div class="col s9">
                                <p><%= t('menu.description') %>: <%= @dish.description %></p>
                            </div>
                            <div class="col s3">
                                <p><%= t('menu.price') %>: <%= @dish.price %> USD</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-action rigth">
                        <a href="#"><%= t('menu.bucket') %> <i class="small material-icons right">add</i></a>
                    </div>
                </div>
 
            </div>
        </div>
        <%- if @average_rating.present? %>
            <div class="b2dfdb teal lighten-4">
                <h5 class="center-align"> <%= t('menu.feedback') %> <%= @dish.short_name %>: </h5>
                <h5 class= "red-text text-darken-2 center-align" > <%= t('menu.rating') %>: <%= @average_rating %> <i class="material-icons orange-text">star</i></h5>
        <% end %>
        <div class="card e0f2f1 teal lighten-5">
            <div class>
                <div class="row">
                    <% @feedbacks.each do |dish| %>
                        <div class="col s3">
                            <p class="grey-text text-darken-2"><i class="small material-icons left">person</i> User feedback: <p>
                        </div>
                        <div class="col s7">
                            <p> <%= dish.comment %> <p>
                        </div>
                        <div class="col s2">
                            <p> <%= t('menu.rating') %>: <%= dish.rating %> <i class="material-icons orange-text">star</i><p>
                        </div>
                    <% end %>
                </div>

                <%- if user_signed_in? %>
                    <div class="container">
                        <div class="row">
                            <div class="center">
                                <div class="input-field">
                                    <div class="actions">
                                        <%= link_to t('feedback.add_feedback') , new_feedback_path(dish_id: @dish.id), class: 'waves-effect waves-light btn-small' %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    
        <div class="center">
            <%= will_paginate @feedbacks, renderer: MaterializePagination::Rails  %>
        </div>


        <div class="container">
            <div class="row">
                <div class="center">
                    <div class="input-field">
                        <div class="actions">
                            <%= link_to t('menu.button.back_to_menu') , dishes_path, class: "waves-effect waves-light btn-small" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</div>

